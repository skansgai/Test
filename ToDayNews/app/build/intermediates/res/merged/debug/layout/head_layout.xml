    <!--新闻类型导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f4f5f6">
        <HorizontalScrollView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推介"
                android:gravity="center"
                android:textColor="#f85959"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热点"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社会"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娱乐"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="军事"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科技"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体育"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="财经"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国际"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时尚"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        </HorizontalScrollView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jia_img"/>
    </LinearLayout>
<!--新闻显示栏-->
    <ListView
