<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/content_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="biaoti"
    android:textSize="30sp"
    android:textColor="@android:color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_head_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/user_head_img"/>
        <TextView
            android:id="@+id/toutiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浪哥说事"
            android:layout_toRightOf="@+id/user_head_img"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_light"
            android:drawableRight="@mipmap/toutiao_img"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.11.25"
            android:layout_below="@+id/toutiao"
            android:layout_toRightOf="@+id/user_head_img"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/guanzhu_btn_style"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/content_img"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_4"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="《今日头条》(TouTiao.org)是一款会自动学习的资讯软件,
        它会聪明地分析你的兴趣爱好,自动为你推荐喜欢的内容,并且越用越懂你。
        你关心的,才是头条!"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
</LinearLayout>