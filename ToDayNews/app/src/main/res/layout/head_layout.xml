<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d43d3d"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/emil_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/youxiang"
            android:padding="10dp"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/yuan_style"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/emil_img"
            android:id="@+id/textView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日头条"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:drawableRight="@mipmap/shuxin_1"
            android:id="@+id/textView" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/reach"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</LinearLayout>
