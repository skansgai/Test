<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <!--收入页面导航栏-->
<RelativeLayout
    android:background="#18a0de"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收入一笔"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="使用模版"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:padding="5dp"/>
</RelativeLayout>
    <TextView
        android:id="@+id/income_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_style"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="0.0"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:gravity="right"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fadeScrollbars="true">
        <!--工资-->
        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类别:工资"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/income_type_btn"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/chence_style"
                />
        </RelativeLayout>
        <!--日期-->
        <LinearLayout
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/income_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="日期：2016-11-9"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/income_daate_chance_btn"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/chence_style"
                />
        </LinearLayout>
        <!--地点-->
        <LinearLayout
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/income_address_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点："
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:layout_alignParentLeft="true"/>
            <EditText
                android:id="@+id/address_edit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:background="@null"
                android:layout_toRightOf="@+id/income_address_textview"/>
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/chence_style"
                />
        </LinearLayout>
        <!--备注-->
        <LinearLayout
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/beizhu_edit"
                android:hint="备注"
                android:gravity="top|left"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/over_btn"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="#34aae1"/>
</LinearLayout>